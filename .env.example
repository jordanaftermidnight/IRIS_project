# IRIS AI Orchestration System - Environment Configuration Template
# Copy this file to .env and configure your API keys and settings

# ==============================================
# API KEYS (Required for live provider integration)
# ==============================================

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Key  
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Key (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ==============================================
# IRIS SYSTEM CONFIGURATION
# ==============================================

# System Mode (demo, development, production)
IRIS_MODE=demo

# Default port for demo server
IRIS_PORT=8080

# Neural learning data storage path
NEURAL_DATA_PATH=~/.iris/learning-data.json

# ==============================================
# DEMO SETTINGS
# ==============================================

# Enable demo mode features
DEMO_MODE=true

# Simulate provider failures for demo (percentage)
DEMO_FAILURE_RATE=0.05